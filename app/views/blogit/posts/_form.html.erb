<%= form_for(@post, :url => blogit.post_path(@post), html: {class: "new_blog_post form-vertical", id: "new_blog_post"}) do |f| %>

  <% if @post.errors.any? %>
    <div class="alert alert-error">
      <h2><%=t :prohibited_this_post_from_being_saved, scope: 'blogit.posts', count: @post.errors.count%></h2>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <%= field do %>
      <div class="control-group">
        <div class="controls">
          <%= f.text_field :title, placeholder: t(:give_your_post_a_title, scope: 'blogit.posts'), :class => 'span6' %>
        </div>
      </div>
    <% end %>

    <%= field do %>
      <div class="control-group">
        <div class="controls">
          <%= f.text_area :body, placeholder: t(:write_something_here, scope: 'blogit.posts'), :rows => 15, :class => 'span6'  %>
        </div>
      </div>
    <% end %>
  </fieldset>

  <fieldset>

    <%= field do %>
      <div class="control-group">
        <%= f.label :tag_list, t(:tags, scope: 'blogit.posts'), :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :tag_list, placeholder: t(:tag_placeholder, scope: 'blogit.posts'), :class => 'span6' %>
        </div>
      </div>
    <% end %>

    <%= field do %>
      <div class="control-group">
        <div class="controls">
          <p class="blog_post_tip help-block">
            <%=t :tip_you_can_style_your_post_using, scope: 'blogit.posts', parser: blogit_conf.default_parser %>
          </p>
        </div>
      </div>
    <% end %>

  </fieldset>

  <%= actions do %>
    <div class="control-group">
      <div class="controls">
        <%= f.submit :class => "btn btn-primary" %>
        <%=t :or, scope: 'blogit.posts'%>
        <%= link_to(t(:cancel, scope: 'blogit.posts'), @post.new_record? ? blog_root_path : blogit.post_path(@post), :class => 'btn') %>
      </div>
    </div>
  <% end %>

<% end %>
